include ..\make.win

COPTS = $(CFLAGS) -I$(CGNSDIR)

#--------------------------------------------------

all : cgiowish.exe
dll : cgiotcl.dll

#--------------------------------------------------

cgiowish.exe : winmain.obj cgiotcl.obj
	$(LINK) $(LFLAGS) /nodefaultlib /subsystem:windows \
	-out:$@ winmain.obj cgiotcl.obj \
	$(CGNSLIB) $(CLIBS) $(BUILDLIBS) $(TCLLIB) $(TKLIB) $(guilibs)

winmain.obj : winmain.c
	$(CC) $(COPTS) $(TCLINC) -c winmain.c

cgiotcl.obj : cgiotcl.c
	$(CC) $(COPTS) $(TCLINC) -c cgiotcl.c

#--------------------------------------------------

cgiotcl.dll : cgiotcl-dll.obj $(CGNSLIB)
	$(LINK) -dll -out:cgiotcl.dll cgiotcl-dll.obj \
	$(CGNSLIB) $(CLIBS) $(TCLLIB) $(TKLIB) $(dlllibs)

cgiotcl-dll.obj : cgiotcl.c
	$(CC) $(COPTS) $(TCLINC) -DBUILD_DLL -Fo$@ -c cgiotcl.c

#---------------------------------------------------------------

install : install-prog install-help

install-prog : cgiowish.exe $(BINDIR)
	-$(INSTALL) cgiowish.exe $(BINDIR)
	-$(INSTALL) cgnsview.bat $(BINDIR)
	-$(INSTALL) cgnsnodes.bat $(BINDIR)
	-$(INSTALL) *.tcl $(BINDIR)
	-$(INSTALL) *.ico $(BINDIR)
	-$(INSTALL) ..\common\tclIndex $(BINDIR)
	-$(INSTALL) ..\common\*.tcl $(BINDIR)
	-$(INSTALL) ..\common\*.ico $(BINDIR)

install-help : $(BINDIR)\help\cgnsview\images
	-$(INSTALL) help\*.html $(BINDIR)\help\cgnsview
	-$(INSTALL) help\images\*.* $(BINDIR)\help\cgnsview\images

$(BINDIR) : $(INSTALLDIR)
	-mkdir $(BINDIR)

$(INSTALLDIR) :
	-mkdir $(INSTALLDIR)

$(BINDIR)\help\cgnsview\images : $(BINDIR)\help\cgnsview
	-mkdir $(BINDIR)\help\cgnsview\images

$(BINDIR)\help\cgnsview : $(BINDIR)\help
	-mkdir $(BINDIR)\help\cgnsview

$(BINDIR)\help :
	-mkdir $(BINDIR)\help

#--------------------------------------------------

.c.obj :
	$(CC) $(COPTS) -Fo$@ -c $<

.obj.exe :
	$(LINK) $(LFLAGS) /out:$@ $< $(CGNSLIB) $(BUILDLIBS)

clean:
	-$(RM) *.obj
	-$(RM) *.lib
	-$(RM) *.exp
	-$(RM) *.pdb
	-$(RM) *.ilk
	-$(RM) *.exe
	-$(RM) *.dll
	-$(RM) *.bak

