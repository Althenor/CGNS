
include ../make.defs

COPTS  = $(CFLAGS) -I$(CGNSDIR) $(TKINCS)
LDLIST = $(CGNSLIB) $(BUILDLIBS) $(TKLIBS) $(X11LIBS) $(CLIBS)

#--------------------------------------------------

all : cgnssh$(EXE)

#---------------------------------------------------------------

cgnssh$(EXE) : cgnssh.$(O) cgnstcl.$(O)
	$(CC) $(LDFLAGS) -o $@ cgnssh.$(O) cgnstcl.$(O) $(LDLIST)
	$(STRIP) $@

cgnssh.$(O)  : cgnssh.c
cgnstcl.$(O) : cgnstcl.c

.c.$(O) :
	$(CC) $(COPTS) -c $<

clean:
	-$(RM) *.$(O) *~ *.bak cgnssh$(EXE)

